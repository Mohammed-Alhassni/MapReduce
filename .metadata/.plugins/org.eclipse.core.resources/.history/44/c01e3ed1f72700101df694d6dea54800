import java.io.IOException;
import java.util.concurrent.TimeUnit;

import com.opencsv.exceptions.CsvValidationException;

public class BuildDataset {
	String samplePath = "/Users/mohmmedmsoud/Desktop/sem2 temp/pds project/SAMPLE.txt";
	String csvPath = "/Users/mohmmedmsoud/Desktop/sem2 temp/pds project/Dataset.csv";
	String jsonPath = "/Users/mohmmedmsoud/Desktop/sem2 temp/pds project/Dataset.json";
	
	public static void main(String[] args) throws InterruptedException, IOException, CsvValidationException {
		BuildDataset MainClass= new BuildDataset();

	    long startNs = System.nanoTime();

	    BlocksExtractor.extractBlocks(MainClass.samplePath);
	    JsonBuilder.convertCSVToJSON();

	    long durationMs = TimeUnit.NANOSECONDS.toMillis(System.nanoTime() - startNs);
	    System.out.println("Done, took " + durationMs + "ms");
	}

}
